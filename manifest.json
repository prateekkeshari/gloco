{
  "manifest_version": 3,
  "name": "Gloco",
  "version": "1.0.1",
  "description": "Gloco â€“ Branded screenshots",
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "scripting",
    "notifications"
  ],
  "action": {
    "default_title": "Gloco Screenshot"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["css/base.css", "css/editor.css"],
      "js": [
        "js/gloco-selector.js",
        "js/gloco-helpers.js",
        "js/gloco-image.js",
        "js/gloco-editor.js",
        "js/content.js"
      ]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
} 