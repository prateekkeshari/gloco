{
  "manifest_version": 3,
  "name": "Gloco Screenshot Tool",
  "version": "1.0.0",
  "description": "Beautiful screenshot tool for capturing and customizing webpage content. Save, edit, and share with style.",
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "scripting",
    "downloads",
    "notifications"
  ],
  "action": {
    "default_title": "Gloco Screenshot"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
} 